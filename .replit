run = "bundle exec ruby main.rb"
hidden = [".bundle"]
entrypoint = "main.rb"

[env]
PATH = "$REPL_HOME/.local/share/gem/ruby/3.1.0/bin"

[nix]
channel = "stable-22_11"

[packager]
language = "ruby"

[packager.features]
packageSearch = true
guessImports = true

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "README.md"]

[languages]

[languages.ruby]
pattern = "**/*.rb"

[languages.ruby.languageServer]
start = "solargraph stdio"
